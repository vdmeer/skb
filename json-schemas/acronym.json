{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://github.com/vdmeer/skb/json-schemas/acronym",
    title: "SKB Acronym",
    "description": "A schema for an SKB acronym",
    "type": "object",
    "properties": {
        "short": {
            "type": "string",
            "description": "The short version of an acronym"
        },
        "long": {
            "type": "string",
            "description": "The long version of an acronym"
        },
        "descr": {
            "type": "string",
            "description": "A description for the acronym"
        },
        "key": {
            "type": "string",
            "description": "An key, if the auto-generated key is not sufficient"
        },
        "links": {
            "$ref": "http://github.com/vdmeer/skb/json-schemas/links",
            "description": "A set of URLs for an acronym"
        }
    },
    "required": [
        "short",
        "long"
    ]
}